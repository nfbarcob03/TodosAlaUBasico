<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consejos">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:alpha="0.8"
            app:srcCompat="@drawable/screen_4__1_" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:alpha="0.5"
            android:layout_margin="20dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageAhorroEnergia"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/ahorro_luz" />

            <TextView
                android:id="@+id/textoAhorroEnergia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:text="Consejos de ahorro energetico"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:alpha="0.5"
            android:layout_marginTop="200dp"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageAhorroAgua"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/ahorro_agua" />

            <TextView
                android:id="@+id/textAhorroAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:text="Consejos de ahorro agua"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:alpha="0.5"
            android:layout_marginTop="380dp"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageReciclaje"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/recxiclaje" />

            <TextView
                android:id="@+id/textReciclaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:text="Consejos de reciclaje"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>